                        android:layout_height="wrap_content"
                        android:id="@+id/chk_category" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtE_category"
                        android:hint="Category" />
                </TableRow>

