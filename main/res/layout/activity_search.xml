                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Summer"
                        android:id="@+id/textView74" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="4"
                        android:id="@+id/txtE_w_summer" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
