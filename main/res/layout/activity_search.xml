                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/chk_common" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtE_common"
